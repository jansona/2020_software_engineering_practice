/* pages/index/index.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.parentView {
  position: relative;
  width: 100%;
  height: 500rpx;
  z-index: 1;
}


.parentImg {
  
  height: 500rpx;
  position: absolute;
  width: 100%;
  z-index: 2;
}

.avatarImg {
  top: 30%;
  left: 40%;
  position: absolute;
  z-index: 3;
}