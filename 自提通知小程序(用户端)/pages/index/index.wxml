<!--主页面-->
<view class="parentView">
	<l-button wx:if="{{!hasUserInfo && canIUse}}" class="userButton" size="medium" open-type="getUserInfo" bind:getUserInfo="getUserInfo">获取微信头像昵称</l-button>
	<block wx:else>
		<!--背景图片-->
		<view class="parentImg">
			<image class="userImage" src='{{userInfo.avatarUrl}}'></image>
		</view>
		<!--用户头像-->
		<view class="avatarImg">
			<l-avatar size="160" placement="bottom" open-data="{{['userAvatarUrl','userNickName']}}" />
		</view>
	</block>
</view>

<l-list title="个人信息" url="/pages/userInfo/userInfo" icon="user" />
<l-list title="集群管理" url="/pages/community/community" icon="edit" />
<l-list title="自提通知" url="/pages/notificationList/notificationList" icon="notification" badge-count="{{package_count}}" badge-position="right" />
<l-list title="特殊申请" url="/pages/dealList/dealList" icon="order" badge-count="{{deal_count}}" badge-position="right" />